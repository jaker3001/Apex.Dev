name: Deploy PR Test Environment

on:
  pull_request:
    types: [opened, synchronize, reopened]

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Deploy to VPS
        id: deploy
        uses: appleboy/ssh-action@v1
        with:
          host: 82.180.136.224
          username: root
          password: ${{ secrets.VPS_PASSWORD }}
          script: |
            PR_NUM=${{ github.event.pull_request.number }}
            PR_DIR="/opt/pr-envs/pr-${PR_NUM}"
            PORT_FILE="${PR_DIR}/.port"
            
            if [ -f "$PORT_FILE" ]; then
              PORT=$(cat "$PORT_FILE")
            else
              PORT=4000
              while ss -tuln | grep -q ":${PORT} "; do
                PORT=$((PORT + 1))
                if [ $PORT -gt 4100 ]; then
                  echo "No available ports"
                  exit 1
                fi
              done
            fi
            
            mkdir -p "$PR_DIR"
            echo "$PORT" > "$PORT_FILE"
            cd "$PR_DIR"
            
            if [ -d ".git" ]; then
              git fetch origin ${{ github.head_ref }}
              git checkout ${{ github.head_ref }}
              git pull
            else
              git clone -b ${{ github.head_ref }} https://github.com/${{ github.repository }} .
            fi
            
            APP_PORT=$PORT docker-compose -p pr-${PR_NUM} up -d --build
            
            echo "Deployed to http://82.180.136.224:$PORT"
